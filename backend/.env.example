# ==================== SERVER CONFIGURATION ====================
# Environment: development, production, or staging
NODE_ENV=development
PORT=5000

# ==================== DATABASE ====================
# MongoDB connection string
# Development (Local): mongodb://localhost:27017/rivio
# Production (Atlas): mongodb+srv://username:password@cluster.mongodb.net/rivio
# Note: For production, make sure MongoDB Atlas allows connections from anywhere (0.0.0.0/0)
MONGODB_URI=mongodb://localhost:27017/rivio

# ==================== CORS ====================
# Comma-separated list of allowed origins
# Development:
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
# Production example (update with your actual Vercel URL):
# ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com

# ==================== EMAIL CONFIGURATION ====================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM="Rivio" <noreply@rivio.com>

# Admin email for receiving notifications
ADMIN_EMAIL=admin@rivio.com

# ==================== JWT & AUTHENTICATION ====================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Admin Dashboard Authentication
# Generate hashed password using: node -e "const bcrypt = require('bcryptjs'); bcrypt.hash('your-password', 10).then(console.log);"
ADMIN_USERNAME=admin
ADMIN_PASSWORD=$2a$10$your-bcrypt-hashed-password-here

# ==================== RATE LIMITING ====================
# Rate limit settings (optional, defaults are set in server.js)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
FORM_LIMIT_WINDOW_MS=3600000
FORM_LIMIT_MAX_REQUESTS=5

# ==================== LOGGING ====================
# Log level: error, warn, info, http, debug
LOG_LEVEL=debug
