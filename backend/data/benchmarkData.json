  "calculationFormulas": {
    "badDebtToSalesRatio": {
      "formula": "(Bad Debt Expense / Total Sales) × 100",
      "description": "Percentage of sales lost to uncollectable debt",
      "example": "If sales = $10M and bad debt = $50K, ratio = 0.5%"
    },
    "badDebtToARRatio": {
      "formula": "(Bad Debt Expense / Accounts Receivable) × 100",
      "description": "Percentage of AR that becomes uncollectable",
      "example": "If AR = $2M and bad debt = $30K, ratio = 1.5%"
    },
    "dso": {
      "formula": "(Accounts Receivable / Total Credit Sales) × Days in Period",
      "description": "Average days to collect payment",
      "example": "If AR = $500K, sales = $3M/quarter, DSO = (500K/3M) × 90 = 15 days"
    },
    "potentialTCISavings": {
      "formula": "Historical Bad Debt × TCI Impact Rate",
      "description": "Estimated savings from TCI adoption",
      "example": "If historical losses = $500K/5yrs and impact = 73%, potential savings = $365K over 5 years",
      "note": "Based on industry average 73% reduction in bad debt for TCI adopters"
    }
  },
